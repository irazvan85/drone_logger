# Backend Environment Variables
ENV=development
DEBUG=true

# API Configuration
API_TITLE="Drone Photo GPS Visualizer API"
API_VERSION="0.1.0"
API_DESCRIPTION="API for importing and visualizing drone photos with GPS coordinates"

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./app.db

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload Configuration
MAX_UPLOAD_SIZE=104857600
UPLOAD_DIR=./uploads

# Logging Configuration
LOG_LEVEL=INFO

# Photo Processing Configuration
PHOTO_BATCH_SIZE=100
GPS_PRECISION=6
